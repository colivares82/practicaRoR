<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%= image_tag @post.image.url(:medium) %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%unless @comments.eql?(nil)%>

<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= link_to 'Show', comment_path(comment, :post_id => params[:id]) , class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment,  :post_id => params[:id]) , class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }  , class: 'btn btn-default btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%end%>


<br>
<%= link_to 'Add New Comment', new_comment_path(:post_id => params[:id]), class: 'btn btn-info' %>